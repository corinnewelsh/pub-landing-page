<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>

  <style>

  
    div.container {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 90%;
      margin: 0 auto;
    }
    
    section {
      border: 1px solid goldenrod;
      padding: 1em;
      margin: 1em;
    }

    /*Spotify CSS*/
    .spotify_row h2,
    .spotify_row h3,
    .spotify_row p {
      font-family: 'Montserrat', sans-serif;
      color: #000;
    }

    .spotify_row {
      margin-top: 50px;
      margin-bottom: 50px;
      width: 100%;
    }
    .spotify_row .container {
      background-color: #1db954;
      display: flex;
      align-items: flex-start;
    }
    .spotify_row .col-sm-6 {
      width: calc(50% - 20px);
      display: inline-block;
      padding: 30px;
    }
    .spotify_row .col-sm-12 {
      width: 100%;
      display: inline-block;
    }
    .spotify_row .col-sm-6:last-child {
      margin-left: 20px;
    }
    .spotify_row iframe {
      width: 100% !important;
    }
    .spotify_row h3,
    .spotify_row p {
      margin-bottom: 5px;
      margin-top: 5px;
    }
    .spotify_row #more {
      display: none;
    }
    .spotify_row h2 {
      padding-left: 30px;
    }
    .spotify_row #read-more-btn {
      color: #1dba54;
      background-color: white;
      box-shadow: unset;
      border: 1px solid #1dba54;
      padding: 10px 20px;
      margin-top: 10px;
      font-family: Montserrat;
      border-radius: 20px;
      font-weight: 600;
      transition: all ease 0.2s;
      cursor: pointer;
      outline: none;
    }
    .spotify_row #read-more-btn:hover {
      color: #fff;
      background: none;
      border-color: #fff;
    }
    iframe.followLink {
      margin-top: 10px;
      background-color: white;
      padding: 10px;
      border: none;
      overflow: hidden;
      width: 250px !important;
      box-shadow: 0 5px 10px #0000000f;
    }
    /*Spotify CSS END*/

  </style>
  
</head>
<body>
  <header>
  <img src="https://www.impericon.com/media/impericon/header/merchandise/foo_fighters/20170621_foo_fighters_header_mobile.jpg" alt="foo fighters" >
  
    <h1>{{ title }}</h1>
  </header>

  {{ content | safe }}
  

  <!-- Spotify JS -->
  <script>
      function readMore() {
        var dots = document.getElementById("dots");
        var moreText = document.getElementById("more");
        var btnText = document.getElementById("read-more-btn");

        if (dots.style.display === "none") {
          dots.style.display = "inline";
          btnText.innerHTML = "Read more";
          moreText.style.display = "none";
        } else {
          dots.style.display = "none";
          btnText.innerHTML = "Read less";
          moreText.style.display = "inline";
        }
      }
  </script>

</body>
</html>